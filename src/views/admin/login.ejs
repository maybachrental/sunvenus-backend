<style>
  .login-page {
    background-color: #eef1f4;
  }

  .login-card {
    width: 420px;
    border-radius: 6px;
    transform: scale(.89);
  }

  .login-input {
    background-color: #eaf2ff;
    border: 1px solid #d6e4ff;
  }

  .login-input:focus {
    background-color: #ffffff;
    border-color: #0d6efd;
    box-shadow: none;
  }

  .login-icon {
    background-color: #ffffff;
    border-left: none;
    padding: 0 16px;
  }

  .input-group-text i {
    color: #6c757d;
  }

  .btn-primary {
    height: 48px;
    font-weight: 500;
  }
</style>
<div class="login-page d-flex align-items-center justify-content-center min-vh-100">

  <div class="login-card card shadow-sm">
    <div class="card-body p-4">
      <% if (flash && flash.success && flash.success.length> 0) { %>
        <div class="alert alert-success text-center">
          <%= flash.success[0] %>
        </div>
        <% } %>
      
          <% if (flash && flash.error && flash.error.length> 0) { %>
            <div class="alert alert-danger text-center">
              <%= flash.error[0] %>
            </div>
            <% } %>
      
      <p class="text-center text-muted mb-4">
        Sign in to start your session
      </p>

      <!-- LOGIN FORM -->
      <form action="/admin/login" method="POST">

        <!-- Email -->
        <div class="input-group mb-3">
          <input type="email" name="email" class="form-control form-control-lg login-input" placeholder="Email" required />
          <span class="input-group-text login-icon">
            <i class="fas fa-envelope"></i>
          </span>
        </div>

        <!-- Password -->
        <div class="input-group mb-4">
          <input type="password" name="password" class="form-control form-control-lg login-input" placeholder="Password"
             required />
          <span class="input-group-text login-icon">
            <i class="fas fa-lock"></i>
          </span>
        </div>

        <!-- Button -->
        <button type="submit" class="btn btn-primary btn-lg w-100">
          Sign In
        </button>

      </form>

    </div>
  </div>

</div>